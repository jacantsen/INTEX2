@model INTEX2.Models.Mummy
@{
    ViewData["Title"] = "Edit Mummy";
}

<h1>Edit a Mummy</h1>
<div asp-validation-summary="All"></div>
<form method="post" asp-controller="Home" asp-action="Edit_burialmain" asp-route-id="@Model.id">
    <input type="hidden" asp-for="id" />

    <div class="form-group">
        @foreach (var prop in typeof(Mummy).GetProperties())
        {
            if (prop.Name != "id")
            {
                <label asp-for="@prop.Name" class="control-label">@prop.Name</label>
                <input name="@prop.Name" class="form-control" value="@prop.GetValue(Model)" />
                
            }
        }
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
