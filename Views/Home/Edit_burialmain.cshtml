@model INTEX2.Models.Mummy
@{
    ViewData["Title"] = "Edit Mummy";
}

<h1>Edit a Mummy</h1>

<form method="post" action="@Url.Action("Edit_burialmain", "Home", new { mummy_id = Model.id })">


    <input type="hidden" asp-for="id" value="@Model.id" />
    <div class="form-group">
        @foreach (var prop in typeof(Mummy).GetProperties())
        {
            if (prop.Name != "id")
            {
                <label asp-for="@prop.Name" class="control-label">@prop.Name</label>
                <input asp-for="@prop.Name" class="form-control" value="@prop.GetValue(Model)" />
                <span asp-validation-for="@prop.Name" class="text-danger"></span>
            }
        }
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

